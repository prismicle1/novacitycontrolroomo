-- Set your password here
local correctPassword = "yourpassword"  -- Change this to your desired password

-- Ask for the password when the computer starts
term.clear()
term.setCursorPos(1, 1)
print("Enter password:")

-- Get the user input (password)
local input = read()

-- Check if the password is correct
if input == correctPassword then
    print("Access Granted")
    sleep(2)  -- Wait for 2 seconds before showing the main screen
    term.clear()
    term.setCursorPos(1, 1)
    print("Main Screen:")  -- Main screen title
    print("[File: Organizations]")  -- This is your placeholder for the file
else
    print("Access Denied")
end
